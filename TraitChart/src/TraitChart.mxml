				<mx:GridItem id="verticalOptionsBar" height="100%" horizontalAlign="center" verticalAlign="middle" backgroundColor="#ffffff">
					<mx:HBox id="verticalOptionsBarContainer" horizontalAlign="center" verticalAlign="middle" initialize="onVerticalHBoxInitialize(event);" updateComplete="onVerticalHBoxUpdate(event);">
