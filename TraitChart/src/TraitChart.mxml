				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem/>
				<mx:GridItem id="horizontalOptionsBar" width="100%" horizontalAlign="center" verticalAlign="middle" backgroundColor="#ffffff">
					<mx:ComboBox id="horizontalAxisComboBox" dataProvider="{_fieldSet}" change="onAxesChange(event);"/>
			    	<mx:ToggleButtonBar id="horizontalAxisToggleButton" itemClick="onHorizontalAxisToggleButtonClick(event);" dataProvider="[Lin, Log]"/>
				</mx:GridItem>
				<mx:GridItem/>
			</mx:GridRow>
		</mx:Grid>
